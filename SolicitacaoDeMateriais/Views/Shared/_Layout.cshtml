<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema De Solicitacao De Materiais</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SolicitacaoDeMateriais.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/images/Logo-UGB.png" width="60px" class="mr-2" alt="logoUGB">
                </a>

                <div class="navbar-collapse justify-content-center">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <h1 class="display-6">Solicitação de Materiais</h1>
                    </a>
                </div>
             
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Menu
                    </button>

                    <ul class="dropdown-menu  dropdown-menu-end" aria-labelledby="dropdownMenuLink">
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="RequestProductService" asp-action="Index">Solicitações de Serviços e Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="Stock" asp-action="Index">Estoque de Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="StockEntry" asp-action="Index">Entrada de Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="StockExit" asp-action="Index">Saída de Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="Supplier" asp-action="Index">Fornecedores</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Index">Usuários</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="Department" asp-action="Index">Departamentos</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index" >Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="Service" asp-action="Index">Serviços</a>
                        </li>                     
                    </ul>
                </div>

            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SolicitacaoDeMateriais - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/tableFilter.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
