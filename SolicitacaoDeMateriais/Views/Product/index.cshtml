@using SolicitacaoDeMateriais.ViewModels;

@model List<ProductDisplayViewModel>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-2 p-2 font-weight-bold text-primary text-center">Produtos</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6 btn-group gap-2 text-start" role=group>
                    <a asp-controller="Product" asp-action="CreateView" role="button" class="btn btn-primary rounded" type="button">Adicionar</a>
                </div>
                <div class="col-md-6">
                    <div class="input-group text-end">
                        <input type="search" id="search" class="form-control form-control-sm" placeholder="Pesquisa...">
                        <button id="searchButton" class="btn btn-primary" type="button">Pesquisar</button>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>

                            <th>Nome</th>

                            <th>EAN</th>

                            <th>Fabricante</th>

                            <th>Fornecedor</th>

                            <th>Preço Unitário</th>

                            <th>Cota mínima em estoque</th>

                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {

                            foreach (ProductDisplayViewModel product in Model)
                            {
                                <tr class="odd">
                                    <th scope="row">@product.Id</th>
                                    <td class="sorting_1">@product.Name</td>
                                    <td class="sorting_1">@product.EANcode</td>
                                    <td class="sorting_1">@product.Manufacturer</td>
                                    <td class="sorting_1">@product.SupplierName</td>
                                    <td class="sorting_1">@product.UnitPrice</td>
                                    <td class="sorting_1">@product.MinimumStock</td>
                                    <td class="sorting_1">
                                        <div class="btn">
                                            <a role="button" class="bi bi-pencil-square" style="font-size:17px; color:blue" asp-route-id="@product.Id" asp-controller="Product" asp-action="EditView"></a>
                                        </div>
                                        <div class="btn">
                                            <a role="button" class="bi bi-trash3" data-toggle="modal" data-target="#exampleModalCenter" style="font-size:17px; color:blue" asp-route-id="@product.Id" asp-controller="Product" asp-action="DeleteView"></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>







