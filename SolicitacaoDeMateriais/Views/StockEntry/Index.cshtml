@using SolicitacaoDeMateriais.ViewModels;

@model List<StockEntryDisplayViewModel>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-2 p-2 font-weight-bold text-primary text-center">Entrada de Produtos</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6 btn-group gap-2 text-start" role=group>
                    <a asp-controller="StockEntry" asp-action="CreateView" role="button" class="btn btn-primary rounded" type="button">Entrada de Produto</a>
                </div>
                <div class="col-md-6">
                    <div class="input-group text-end">
                        <input type="search" id="search" class="form-control form-control-sm" placeholder="Pesquisa...">
                        <button id="searchButton" class="btn btn-primary" type="button">Pesquisar</button>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Código EAN</th>
                            <th>Produto</th>
                            <th>Fornecedor</th>
                            <th>NF</th>
                            <th>Qtd. Entrada</th>
                            <th>Depóstito</th>
                            <th>Data de Entrada</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (StockEntryDisplayViewModel stockEntry in Model)
                            {
                                <tr>
                                    <td>@stockEntry.Id</td>
                                    <td>@stockEntry.ProductEANcode</td>
                                    <td>@stockEntry.ProductName</td>
                                    <td>@stockEntry.ProductSupplierName</td>
                                    <td>@stockEntry.NF</td>
                                    <td>@stockEntry.Quantity</td>
                                    <td>@stockEntry.StorageStock</td>                                  
                                    <td>@stockEntry.CreationDate</td>
                                    <td>
                                        <div class="btn-group gap-2" role="group">
                                            <a role="button" class="bi bi-pencil-square" style="font-size:17px; color:blue" asp-route-id="@stockEntry.Id" asp-controller="StockEntry" asp-action="EditView"></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>









